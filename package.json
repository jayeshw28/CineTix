{
  "name": "cinetix",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tsc": "tsc --noEmit",
    "format": "prettier \"**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
